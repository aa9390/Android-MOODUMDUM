<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <com.mcxtzhang.swipemenulib.SwipeMenuLayout
        android:id="@+id/swipeMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="0.2"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/WriterOfComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:text="지나가는 영혼"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/contentOfComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/WriterOfComment"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:text="댓글내용"
                    android:textColor="#505050" />

                <TextView
                    android:id="@+id/likeCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/contentOfComment"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:text="공감 0개"
                    android:textColor="#505050" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="0.8"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/btnLike"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="30dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/selector_like_btn"/>

            </RelativeLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnDel"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="#e24c56"
            android:text="삭제"
            android:textColor="@android:color/white"/>

    </com.mcxtzhang.swipemenulib.SwipeMenuLayout>

    <View
        android:id="@+id/view"
        android:layout_width="320dp"
        android:layout_height="1dp"
        android:layout_gravity="center|bottom"
        android:background="#bcbcbc" />

</LinearLayout>
